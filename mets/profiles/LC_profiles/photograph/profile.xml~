  <Appendix ID="ex01" NUMBER="1">
    <mets:dmdSec ID="dmd1">
      <mets:mdWrap MDTYPE="MODS">
	<mets:xmlData>
	  <mods:mods ID="mods1">
	    <mods:titleInfo>
	      <mods:title>Title</mods:title>
	    </mods:titleInfo>
	  </mods:mods>
	</mets:xmlData>
      </mets:mdWrap>
    </mets:dmdSec>
  </Appendix>

